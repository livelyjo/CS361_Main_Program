<html>
<head>
    <title>Update Session</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <h1><strong>Update Session<strong></h1>
    <form action="{{ url_for('save_update_session', id=session['id']) }}" method="POST">
        <p><label>Date of Session: </label> <input type="text" name="date" value="{{session['date']}}"></p>
        <p><label>Gym Name: </lable> <input type="text" name="gym" value="{{session['gym']}}"></p>
        <p><label>Area's of Focus: </lable> <input type="text" name="focus" value="{{session['focus']}}"></p>
    <p>Matches:
        {% for match in associated_matches %}
            <a href="{{ url_for('update_match', id=session['id'], match_id=match['match_id']) }}">
                <button title="Edit the match" type="button">{{ match['opponent'] }}</button>
            </a>
            {% if not loop.last %}, {% endif %}
        {% endfor %}
    </p>
        <button title="Save changes to the session" type="submit">Save</button>
    </form>
    <a href="{{ url_for('add_match', id=session['id']) }}"><button title="Add a match"><i class="fa-solid fa-plus"></i></button></a>
    <a href="{{ url_for('add_bulk_match', id=session['id']) }}"><button title="Add multiple matches"><i class="fas fa-plus-square"></i></button></a>
    <p></p>
    <button title="Back" onClick="window.location.href=' {{url_for('root')}}'"><i class="fa-solid fa-arrow-left"></i></button>
    <a href="{{ url_for('you_sure', id=session['id']) }}"><button title="Delete the session"><i class="fas fa-trash"></i></button></a>
</body>
</html>