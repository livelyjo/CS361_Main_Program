
<html>
<head>
    <title>Update Match</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <h1><strong>Update Match</strong></h1>
<form action="{{ url_for('save_update_match', id=match['session_id'], match_id=match['match_id']) }}" method="POST">
    <label for="opponent">Opponent: </label>
    <input type="text" id="opponent" name="opponent" value="{{match['opponent']}}"><br>
    <label for="duration">Duration: </label>
    <input type="text" id="duration" name="duration" value="{{match['duration']}}"><br>
    <label for="focus">Focus: </label>
    <input type="text" id="focus" name="focus" value="{{match['focus']}}"><br>
    <label for="notes">Notes: </label>
    <input type="text" id="notes" name="notes" value="{{match['notes']}}"><br>
    <button title="Save changes to match" type="submit">Save</button>
</form>

    <p></p>
    <button title="Back" onClick="window.location.href=' {{url_for('update_session', id=match['session_id'])}}'"><i class="fa-solid fa-arrow-left"></i></button>
    <a href="{{ url_for('delete_match', id=match['session_id'], match_id=match['match_id'])}}"><button title="Delete match"><i class="fas fa-trash"></i></button></a>
</body>
</html>